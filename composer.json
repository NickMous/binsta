{
    "name": "nickmous/binsta",
    "description": "ignore this",
    "type": "project",
    "require": {
        "php": ">=8.4",
        "twig/twig": "^3.19",
        "gabordemooij/redbean": "^5.7",
        "vlucas/phpdotenv": "^5.6",
        "sentry/sentry": "^4.14",
        "filp/whoops": "^2.18"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "NickMous\\Binsta\\": "src/",
            "NickMous\\Binsta\\Tests\\": "tests/",
            "Nickmous\\Binsta\\Controllers\\": "controllers/"
        },
        "files": [
          "helpers.php"
        ]
    },
    "authors": [
        {
            "name": "Sander den Hollander",
            "email": "sanderdenhollander12@gmail.com"
        }
    ],
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "pestphp/pest": "^3.7",
        "mockery/mockery": "^1.6",
        "guzzlehttp/guzzle": "^7.9",
        "phpstan/phpstan": "^2.1",
        "squizlabs/php_codesniffer": "^3.13",
        "rector/rector": "^2.1",
        "pestphp/pest-plugin-type-coverage": "^3.5",
        "deployer/deployer": "^7.5",
        "symfony/var-dumper": "^7.3"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "test": "pest",
        "lint": [
            "phpcs",
            "phpstan"
        ],
        "fix": [
            "phpcbf",
            "rector process"
        ],
        "coverage": [
            "XDEBUG_MODE=coverage pest --coverage --min=100",
            "pest --type-coverage --min=100"
        ],
        "mutation": [
            "XDEBUG_MODE=coverage pest --mutate --min=100"
        ]
    }
}
